{{# if user}}

<div class="container">
	<div class="row">
		<div class="col-sm-10 col-sm-offset-1 col-md-8 col-md-offset-2">
			<article>
				<p><a href="/blog">&larr; back to the blog</a></p>
				<hr>
				<header>
					<h1>{{data.post.title}}</h1>
					<h5>
						{{{categoryList data.post.categories prefix="Posted in "}}}
						{{#if author.name.first}}by {{author.name.first}}{{/if}}
					</h5>
				</header>
				<div class="post">
					{{#if data.post.image}}<img src="{{images}}" class="img-responsive">{{/if}}
					</br>
					{{# each  data.comments.results}}
					<ul>
						<li>
							<a href="" rel="tag">{{{author.username}}} </a><small>{{title}}</small>
						</li>
					</ul>
					{{/each}}


					<!-- locals.data.comments -->
				</div>
				<form class="form-horizontal" action='/post' method="post">
					<input type="hidden" name="action" value="post">
					<textarea id="title" name="title" style="width:50%" placeholder="Comment.."
						value="{{form.title}}"></textarea>
					<button class="btn btn-primary" type="submit">Comment</button>
				</form>
			</article>
		</div>
	</div>
</div>
{{/if}}