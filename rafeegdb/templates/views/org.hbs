{{# if user}}

<link rel='stylesheet prefetch' href='http://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css'>
<script defer src="public/fontawesome-free-5.0.8/svg-with-js/js/fontawesome-all.js"></script>
<meta name="viewport" content="width=device-width, initial-scale=1">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
<link rel="stylesheet" href="https://unpkg.com/bootstrap@3.3.7/dist/css/bootstrap.min.css" />
<link rel="stylesheet" href="https://unpkg.com/animate.css@3.5.2/animate.css" type="text/css" />
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>

<link rel="stylesheet" href="https://unpkg.com/rmodal@1.0.28/dist/rmodal.css" type="text/css" />
{{{isAdminEditorCSS user}}}
<script type="text/javascript" src="https://unpkg.com/rmodal@1.0.26/dist/rmodal.js"></script>
<div class="container">
	<div class="panel panel-primary">
		<div class="panel-body">
			<div class="col-md-6">
				<div class="modal-content">
					<form class="form-horizontal" action="/org" method="post">
						<input type="hidden" name="action" value="org">




						<div style="background-color:#254444" class="modal-header">

						</div>

						<div class="modal-body">
							<div class="form-group">
								<label class="control-label col-xs-4">Full name</label>
								<div class="input-group col-xs-7">
									<input class="form-control" id="name" placeholder="Full name" name="name"
										type="text" value="{{form.name}}">

								</div>

							</div>
							<div class="form-group">
								<label class="control-label col-xs-4">Phone number</label>
								<div class="input-group col-xs-7">
									<input class="form-control" id="phone" name="phone" placeholder="Phone" type="text"
										value="{{form.phone}}">

								</div>
							</div>
							<div class="form-group">
								<label class="control-label col-xs-4">Description</label>
								<div class="input-group col-xs-7">
									<textarea class="form-control" id="description" name="description" type="text"
										value="{{form.description}}"></textarea>
								</div>
							</div>
							<div class="form-group">
								<label class="control-label col-xs-4">Link</label>
								<div class="input-group col-xs-7">
									<select name="link" class="form-control">
										<option value="">(select one)</option>
										{{# each data.links}}
										<option value="{{id}}">{{Facebook}}</option>
										{{/each}}
									</select>
								</div>
							</div>
							<div class="form-group">
								<label class="control-label col-xs-4">Picture</label>
								<div class="input-group col-xs-7">
									<select name="picture" id="picture">
										<option value="">(select one)</option>
										{{# each data.pictures}}
										<option value="{{id}}">{{title}}</option>
										{{/each}}
									</select>
								</div>
							</div>
							<div class="form-group">
								<label class="control-label col-xs-4">Class Item</label>
								<div class="input-group col-xs-7">
									<select name="item" id="item">
										<option value="">(select one)</option>
										{{# each data.items}}
										<option value="{{id}}">{{name}}</option>
										{{/each}}
									</select>
								</div>
							</div>

						</div>
						<div class="modal-footer">
							<button class="btn btn-default" type="button" onclick="modal.close();">Cancel</button>
							<button class="btn btn-primary" type="submit">Save</button>
						</div>

					</form>
				</div>
			</div>
		</div>
	</div>
</div>
{{/if}}