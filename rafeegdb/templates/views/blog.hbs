<link rel='stylesheet prefetch' href='http://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css'>
<script defer src="public/fontawesome-free-5.0.8/svg-with-js/js/fontawesome-all.js"></script>
<meta name="viewport" content="width=device-width, initial-scale=1">
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
{{{isAdminEditorCSS user}}}
<link rel="stylesheet" href="./styles0/style.css">

{{# if user}}
<div class="container">

	<div class="panel panel-primary">
		<div class="panel-heading">Showing {{ data.posts.results.length}} Posted </div>
		<div class="panel-body">

			<form class="form-horizontal" name="sampleForm" action="/blog" enctype="multipart/form-data"
				autocomplete='off' method="post">

				<input type="hidden" name="action" value="blog">
				<div class="section"> <textarea id="title" name="title" style="width:100%"
						placeholder="Typing content post.." value="{{form.title}}"></textarea>
				</div>
				<div class="inner-wrap">
					<label><input type="file" id="photo" name="photo" /></label>

				</div>
				<select name="classis" id="classis">
					<option value="">(select one)</option>
					{{# each data.classies}}
					<option value="{{id}}">{{name}}</option>
					{{/each}}
				</select>
				<div class="button-section">
					<input type="submit" name="Upload" />
				</div>
				<div class="col-sm-4 col-md-3">
					<div>
						<a href="/blog" class="active list-group-item">تصنيف</a>
						{{# each data.classies }}
						<a href="{{classisUrl key}}" class="false list-group-item">{{name}}</a>
						{{/each}}
					</div>

				</div>

			</form>

		</div>

		<table class="table table-striped">
			{{# each data.posts.results}}


			<tr>
				<td>
					<div data-ks-editable="{{#if ../user}}{{adminEditableUrl ../../user _id}}{{/if}}" class="post">

						<h2><a href="">{{{author.username}}}</a></h2>

						<div class="post">
							<p>{{{title}}}</p>
							<img src='../uploads/files/{{file.filename}}'
								style="width:100px; height: 100px; crop:'fit';" class="img-responsive" />
							{{#if title}}
							<p class="read-more"><a href="{{commentUrl slug}}">Comment...</a></p>
							{{/if}}
							<form class="form-horizontal" action="/blog" method="get">
								<input type="hidden" name="action" value="blog">


							</form>
						</div>

					</div>
					<ul class="ticket-meta">

						<li>
							<small>Class</small><a href="{{classisUrl key}}" rel="tag"> {{classies.name}}</a>
						</li>
						<li>
							<small>Date</small><a href="" rel="tag"> {{date}}</a>
						</li>

						<li>
							<small>Location</small><a href="" rel="tag"> {{location.state}}</a>
						</li>
						<li>
							<button class="btn btn-primary" type="submit">Like{{likesId}}</button>
						</li>
					</ul>
				</td>
			</tr>
			{{/each}}
		</table>
		<div class="panel-footer"></div>
	</div>
	{{>pagination}}

	{{else}}
	<div class="container">

		<div class="panel panel-primary">
			<div class="panel-heading">Login to Platform</div>
			<div class="panel-body">
				<div class="col-md-4">
					<form role="form" action="/signin" method="post">
						<div class="form-group">
							<label for="sender-email" class="control-label">Email address:</label>
							<div class="input-icon">
								<input class="form-control email" id="signin-email" placeholder="you@Email.com"
									name="email" type="email" value="">
							</div>
						</div>
						<div class="form-group">
							<label for="user-pass" class="control-label">Password:</label>
							<div class="input-icon">
								<input type="password" class="form-control" placeholder="Password" name="password"
									id="password">
							</div>
						</div>
						<div class="form-group">
							<input type="submit" class="btn btn-primary " value="Login">
						</div>
					</form>
				</div>
			</div>
		</div>

	</div>

</div>

{{/if}}